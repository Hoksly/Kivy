<FolderWidget>:
    Button:

        id: folder_button
        pos: self.parent.pos
        size: self.parent.size

        on_press:
            self.parent.switch_to()



        Image:
            source: 'sources/images/folder.png'
            size_hint: None, None
            height: self.parent.height
            width: self.height
            pos: (self.parent.x + 10, self.parent.y)

        Label:
            id: folder_label
            text: self.parent.text
            size_hint: None, None
            height: self.parent.height
            width: self.parent.width - self.parent.height * 1.5
            text_size: self.size
            halign: "left"
            valign: "middle"
            pos: (self.parent.x + self.parent.height * 1.5 , self.parent.y)

        Image:
            source: 'sources/images/next_folder.png'
            size_hint: None, None
            height: self.parent.height * 0.5
            width: self.height * 0.5
            pos: (self.parent.width - self.parent.height * 0.5, self.parent.y + self.parent.height * 0.25)


<FileWidget>:

    Button:
        pos: self.parent.pos
        size: self.parent.size
        Image:
            id: file_image

            size_hint: None, None

            size: self.parent.height * 0.9, self.parent.height * 0.9

            pos: (self.parent.x + 10, self.parent.y + self.parent.height * 0.05)

        Label:
            id: file_label
            size_hint: None, None
            height: self.parent.height
            width: self.parent.width - self.parent.height * 1.5
            text_size: self.size
            halign: "left"
            valign: "middle"
            pos: (self.parent.x + self.parent.height * 1.5 , self.parent.y)



